extends ../../base
include ../../blocks/cards/cards-title/cards-title
include ../../blocks/form-elements/calendar/calendar
include ../../blocks/form-elements/text-field/text-field
include ../../blocks/form-elements/dropdown/dropdown
include ../../blocks/form-elements/buttons/buttons
include ../../blocks/form-elements/radio-btn/radio-btn
include ../../blocks/form-elements/toggle/toggle
include ../../blocks/cards/invoice/invoice
include ../../blocks/cards/booking/booking
include ../../blocks/form-elements/rate-btn/rate-btn
include ../../blocks/cards/gallery/gallery

block title
    | Cards

block main
    .logo-wrapper
        include ../../blocks/logo/logo-grey

block cards-section
    .container
        .cards__wrapper
            .cards__column
                .cards__item
                    .find-apartments__items
                        .find-apartments__item
                            +title('cards__title', 'Найдем номера под ваши пожелания')

                            form(class="find-apartments__form" action="/mock-address" method="get")
                                .datepicker-field
                                    .datepicker-field--left
                                        +subtitle('datepicker-field__title', 'Прибытие')
                                        +datepickerLeft('text-field--datepicker text-field-datepicker--left', 'ДД.ММ.ГГГГ', 'startDate', 'start', 'material-icons--left-datepicker', 'expand_more')
                                    .datepicker-field--right
                                        +subtitle('datepicker-field__title', 'Выезд')
                                        +datepickerRight('text-field--datepicker text-field-datepicker--right', 'ДД.ММ.ГГГГ', 'endDate', 'end', 'material-icons--left-datepicker', 'expand_more')

                        .find-apartments__item
                            +subtitle('find-apartments__subtitle', 'Гости')
                        .find-apartments__dropdown
                            form(action="")
                                .form-elements__input--dropdown
                                    +dropdown('Сколько гостей')

                                div(class="dropdown__menu")
                                    +dropdownControls('item-adult', 'Взрослые', '-', '0', '+')
                                    +dropdownControls('item-children', 'Дети', '-', '0', '+')
                                    +dropdownControls('item-babies', 'Младенцы', '-', '0', '+')

                                    div(class="dropdown__buttons" data-id="item-btn")
                                        button(class="clear-btn") Очистить
                                        button(class="apply-btn") Применить

                        .find-apartments__item
                            +longButton('find-apartments__button long-button', 'Подобрать номер', 'long-button__icon', 'arrow_forward')

                .cards__item
                    .register__items
                        .register
                            +title('cards__title', 'Регистрация аккаунта')
                            +inputField('', 'cards__field--name text-field', '', 'text', 'Имя')
                            +inputField('', 'cards__field--surname text-field', '', 'text', 'Фамилия')

                            .register__gender
                                +radioButton('male-btn', 'marker__descr--female', 'Мужской', 'male-btn', 'checked')
                                +radioButton('female-btn', 'marker__descr--male', 'Женский', 'female-btn', '')

                            .register__birthday
                                +subtitle('datepicker-field__title', 'дата рождения')
                                +inputField('', 'register__birthday--field text-field', '', 'text', 'ДД.ММ.ГГГГ')

                            .register__service
                                +subtitle('datepicker-field__title', 'данные для входа в сервис')
                                +inputField('', 'register__service--email text-field', '', 'email', 'Email')
                                +inputField('', 'register__service--password text-field', '', 'password', 'Пароль')
                                +toggle('register__service--toggle', 'Получать спецпредложения', 'register__service--toggle', '')

                            .register__button
                                +longButton('register__button--long long-button', 'перейти к оплате', 'long-button__icon', 'arrow_forward')

                            .register__account
                                .account__text Уже есть аккаунт на Toxin
                                .account__button
                                    +accountButton('rounded-button', 'Войти')

            .cards__column
                .cards__item
                    .booking__items
                        .booking__item
                            +booking('№', '888', 'люкс', '9 990₽', ' в сутки')

                        .booking__item
                            form(class="find-apartments__form" action="/mock-address" method="get")
                                .datepicker-field
                                    .datepicker-field--left
                                        +subtitle('datepicker-field__title', 'Прибытие')
                                        +datepickerLeft('text-field--datepicker text-field-datepicker--left', 'ДД.ММ.ГГГГ', 'startDate', 'start', 'material-icons--left-datepicker', 'expand_more')
                                    .datepicker-field--right
                                        +subtitle('datepicker-field__title', 'Выезд')
                                        +datepickerRight('text-field--datepicker text-field-datepicker--right', 'ДД.ММ.ГГГГ', 'endDate', 'end', 'material-icons--left-datepicker', 'expand_more')

                        .booking__item
                            .find-apartments__item
                                +subtitle('find-apartments__subtitle', 'Гости')
                            .find-apartments__dropdown
                                form(action="")
                                    .form-elements__input--dropdown
                                        +dropdown('3 гостя')

                                    div(class="dropdown__menu")
                                        +dropdownControls('item-adult', 'Взрослые', '-', '0', '+')
                                        +dropdownControls('item-children', 'Дети', '-', '0', '+')
                                        +dropdownControls('item-babies', 'Младенцы', '-', '0', '+')

                                        div(class="dropdown__buttons" data-id="item-btn")
                                            button(class="clear-btn") Очистить
                                            button(class="apply-btn") Применить

                        .booking__item
                            .invoice__item
                                .invoice
                                    +invoice('invoice__service', '9 990₽ х 4 суток', '39 960₽')
                                    +invoice('invoice__service invoice__service_with-icon', 'Сбор за услуги: скидка 2 179₽', '0₽')
                                    +invoice('invoice__service  invoice__service_with-icon', 'Сбор за дополнительные услуги', '300₽')
                                    +invoiceTotal('invoice__row invoice__row_font_large', 'Итого', 'invoice__block', '38 081₽')


                        .booking__item
                            +longButton('booking__button--long long-button', 'забронировать', 'long-button__icon', 'arrow_forward')

                .cards__item
                    .enter__items
                        .enter__item
                            +title('cards__title', 'Войти')
                            +inputField('', 'register__service--email text-field', '', 'email', 'Email')
                            +inputField('', 'register__service--password text-field', '', 'password', 'Пароль')

                        .enter__item
                            +longButton('enter__button--long long-button', 'войти', 'long-button__icon', 'arrow_forward')

                        .enter__item
                            .register__account
                                .enter__text Нет аккаунта на Toxin?
                                .enter__button
                                    +accountButton('rounded-button', 'создать')

            .cards__column
                .cards__item
                    +datepickerLeft('text-field-datepicker--left', '', '', '', '', '')

                .cards__item
                    .gallery__items
                        +gallery('gallery-1.jpg', 'true', '№', '888', 'люкс', '9 990₽', ' в сутки', 'star', '', 'cards__rate form-elements__rate--right', '145', 'Отзывов')
                        +gallery('gallery-2.jpg', 'false', '№', '840', '', '9 990₽', ' в сутки', 'star', '', '', '65', 'Отзывов')



