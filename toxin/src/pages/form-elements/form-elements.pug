extends ../../base

block title
    | Form Elements

block main
    include ../../blocks/logo/logo-grey

block form-section
    .container
        .form-elements
            .form-elements-item--default
                .form-elements__descr
                    span text field
                .form-elements__input
                    input(class="text-field" type="email" placeholder="Email")
            .form-elements-item--hover
                .form-elements__descr
                    span text field
                .form-elements__input
                    input(class="text-field" type="email" placeholder="Email")

            .form-elements-item
                .form-elements__dropdown
                    .form-elements__descr
                        span dropdown
                    .dropdown
                        input(class="dropdown" type="text") 
                        i(class="material-icons") keyboard_arrow_down
                    

