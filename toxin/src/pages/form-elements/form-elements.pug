extends ../../base
include ../../blocks/form-elements/dropdown/dropdown
include ../../blocks/form-elements/text-field/text-field
include ../../blocks/form-elements/calendar/calendar
include ../../blocks/form-elements/expander/expander
include ../../blocks/form-elements/additions/additions
include ../../blocks/form-elements/checkbox/checkbox
include ../../blocks/form-elements/radio-btn/radio-btn
include ../../blocks/form-elements/toggle/toggle
include ../../blocks/form-elements/rate-btn/rate-btn
include ../../blocks/form-elements/rich-checkbox/rich-checkbox
include ../../blocks/form-elements/buttons/buttons
include ../../blocks/form-elements/pagination/pagination
include ../../blocks/form-elements/bullet-list/bullet-list

block title
    | Form Elements

block main
    .logo-wrapper
        include ../../blocks/logo/logo-grey

block form-section
    .container
        .form-elements__wrapper
            .form-elements.form-elements--left
                .form-elements-item--default
                    form(action="")
                        +textField('text field', 'default')
                        +inputField('', 'text-field', 'default', 'email', 'Email')
                .form-elements-item--hover
                    form(action="")
                        .form-elements__descr
                            +textField('text field', 'hover')
                            +inputField('', 'text-field', 'hover', 'email', 'Email')

                .form-elements-item
                    .form-elements__dropdown
                        form(action="")
                            +formElementsHeader('dropdown')
                            .form-elements__input--dropdown
                                +dropdown('Сколько гостей')

                            div(class="dropdown__menu")
                                +dropdownControls('item-adult', 'Взрослые', '-', '0', '+')
                                +dropdownControls('item-children', 'Дети', '-', '0', '+')
                                +dropdownControls('item-babies', 'Младенцы', '-', '0', '+')

                                div(class="dropdown__buttons" data-id="item-btn")
                                    button(class="clear-btn") Очистить
                                    button(class="apply-btn") Применить

                .form-elements-item
                    .form-elements__dropdown
                        form(action="")
                            +formElementsHeader('masked text field')
                            +inputField('--masked', 'text-field', '', 'text', 'ДД.ММ.ГГГГ')

                .form-elements-item
                    .form-elements__datepicker
                        .datepicker-wrapper
                            +formElementsHeader('date Dropdown')
                            .form-elements__input--datepicker
                                +datepickerLeft('text-field--datepicker text-field-datepicker--left', 'ДД.ММ.ГГГГ', 'startDate', 'start', 'material-icons--left-datepicker', 'expand_more')

                        .datepicker-wrapper--right
                            +formElementsHeader('date Dropdown')
                            .form-elements__input--datepicker
                                +datepickerRight('text-field--datepicker text-field-datepicker--right', 'ДД.ММ.ГГГГ', 'endDate', 'end', 'material-icons--left-datepicker', 'expand_more')

                .form-elements-item
                    .form-elements__filter-date-wrapper
                        form(action="")
                            +formElementsHeader('filter date dropdown')
                            .form-elements__filter-date
                                input(class="text-field--filter datepicker-here" data-range="true" data-multiple-dates-separator=" - " type="text" placeholder="ДД.ММ.ГГГГ")
                                i(class="material-icons--filter") expand_more

                .form-elements-item
                    .form-elements__email-wrapper
                        form(action="" method="get")
                            +formElementsHeader('subscription text field')
                            .form-elements__email-field
                                    input(class="text-field--email" type="text" placeholder="Email")
                                    i(class="material-icons--email subscription__button") arrow_forward

                .form-elements-item
                    .form-elements__dropdown
                        form(action="")
                            +formElementsHeader('dropdown')
                            .form-elements__input--dropdown
                                +dropdown('2 спальни, 2 кровати')

                            div(class="dropdown__menu")
                                +dropdownControls('', 'Спальни', '-', '0', '+')
                                +dropdownControls('', 'Кровати', '-', '0', '+')
                                +dropdownControls('', 'Ванные комнаты', '-', '0', '+')

                                div(class="dropdown__buttons" data-id="item-btn")
                                    button(class="clear-btn") Очистить
                                    button(class="apply-btn") Применить

                .form-elements-item
                    .form-elements__dropdown
                        form(action="")
                            +formElementsHeader('dropdown')

                            .form-elements__input--dropdown
                                +dropdown('2 спальни, 2 кровати')

                            div(class="dropdown__menu")
                                +dropdownControls('', 'Спальни', '-', '0', '+')
                                +dropdownControls('', 'Кровати', '-', '0', '+')
                                +dropdownControls('', 'Ванные комнаты', '-', '0', '+')

                                div(class="dropdown__buttons" data-id="item-btn")
                                    button(class="clear-btn") Очистить
                                    button(class="apply-btn") Применить

                .form-elements-item
                    .form-elements__dropdown
                        form(action="")
                            +formElementsHeader('dropdown')

                            .form-elements__input--dropdown
                                +dropdown('2 спальни, 2 кровати')

                            div(class="dropdown__menu")
                                +dropdownControls('', 'Спальни', '-', '0', '+')
                                +dropdownControls('', 'Кровати', '-', '0', '+')
                                +dropdownControls('', 'Ванные комнаты', '-', '0', '+')

                                div(class="dropdown__buttons" data-id="item-btn")
                                    button(class="clear-btn") Очистить
                                    button(class="apply-btn") Применить

                .form-elements-item
                    .form-elements__expander
                        form(action="")
                            div(class="expander")
                                div(class="expander__header js-expander") Expandable checkbox list
                                div(class="expander__list expander__list_hided")
                                    div(class="expander__wrapper")
                                        div(class="checkbox__marks")
                                            i(class="fa fa-check checkbox__mark" aria-hidden="true" id="mark-breakfast")
                                        div(class="expander__checkbox")
                                            label(class="checkbox" for="checkbox-breakfast") Завтрак
                                                input(class="checkbox__input" type="checkbox" checked="" id="checkbox-breakfast" data-type="expander-breakfast")
                                                div(class="checkbox__mark")

                            div(class="expander")
                                div(class="expander__header js-expander") Expandable checkbox list
                                div(class="expander__list expander__list_hided")
                                    +expander('mark-breakfast--open', 'Завтрак', 'checkbox-breakfast--open', 'expander-breakfast--open')
                                    +expander('mark-desk', 'Письменный стол', 'checkbox-desk', 'expander-desk')
                                    +expander('mark-feeding-chair', 'Стул для кормления', 'checkbox-feeding-chair', 'expander-feeding-chair')
                                    +expander('mark-cot', 'Кроватка', 'checkbox-cot', 'expander-cot')
                                    +expander('mark-tv', 'Телевизор', 'checkbox-tv', 'expander-tv')
                                    +expander('mark-shampoo', 'Шампунь', 'checkbox-shampoo', 'expander-shampoo')

                .form-elements-item
                    .form-elements__additions
                        +additions('tag_faces', 'Комфорт', 'Шумопоглощающие стены')
                        +additions('location_city', 'Удобство', 'Окно в каждой из спален')

            .form-elements.form-elements--middle
                .form-elements-item
                    .form-elements__checkbox-wrapper
                        form(action="")
                            +formElementsHeader('Checkbox Buttons')
                            .checkboxs
                                +checkbox('', 'mark-smoke', 'checkbox-smoke', 'Можно курить', 'checkbox-smoke', 'smoke')
                                +checkbox('', 'mark-nursling', 'checkbox-nursling', 'Можно с питомцами', 'checkbox-nursling', 'nursling')
                                +checkbox('checkbox__marks--long-text', 'mark-guests', 'checkbox-guests', 'Можно пригласить гостей (до 10 человек)', 'checkbox-guests', 'guests')

                .form-elements-item
                    form(action="")
                        +formElementsHeader('Radio Buttons')
                        .form-elements__radio-wrapper
                            +radioButton('male-btn', 'marker__descr--female', 'Мужской', 'male-btn', 'checked')
                            +radioButton('female-btn', 'marker__descr--male', 'Женский', 'female-btn', '')

                .form-elements-item
                    form(action="")
                        +formElementsHeader('Toggle')
                        .form-elements__toggle-wrapper
                            +toggle('toggle-btn--active', 'Получать спецпредложения', 'toggle-btn--active', 'checked')
                            +toggle('toggle-btn--disabled', 'Получать спецпредложения', 'toggle-btn--disabled', '')

                .form-elements-item
                    form(action="")
                        +formElementsHeader('like button')
                        .form-elements__like-wrapper
                            .form-elements__like
                                div(class="like") 2
                                    i(class="like__icon") favorite_border
                                div(class="like like--active") 12
                                    i(class="like__icon like__icon--active") favorite

                .form-elements-item
                    form(action="")
                        +formElementsHeader('rate button')
                        .form-elements__rate-wrapper
                            +rateButton('star', 'star_border', '')
                            +rateButton('star', '', 'form-elements__rate--right')

                .form-elements-item
                    .form-elements__dropdown
                        form(action="")
                            +formElementsHeader('dropdown')

                            .form-elements__input--dropdown
                                +dropdown('Сколько гостей')

                            div(class="dropdown__menu")
                                +dropdownControls('', 'Взрослые', '-', '0', '+')
                                +dropdownControls('', 'Дети', '-', '0', '+')
                                +dropdownControls('', 'Младенцы', '-', '0', '+')

                                div(class="dropdown__buttons" data-id="item-btn")
                                    button(class="clear-btn") Очистить
                                    button(class="apply-btn") Применить

                .form-elements-item
                    +formElementsHeader('Rich Checkbox Buttons')
                    .form-elements__rich-checkbox
                        +richCheckbox('mark-hall', 'checkbox-hall', 'Широкий коридор', 'checkbox-hall', 'hall', 'Ширина коридоров в номере не менее 91 см.')
                        +richCheckbox('mark-specialist', 'checkbox-specialist', 'Помощник для инвалидов', 'checkbox-specialist', 'specialist', 'На 1 этаже вас встретит специалист и проводит до номера.')

                //- здесь нужно будет продолжить среднюю часть верстки

            .form-elements.form-elements--right
                .form-elements-item
                    .form-elements__slider-wrapper
                        +formElementsHeader('range slider')
                        .form-elements__slider-title
                            div(class="extra-controls")
                                input(type="text" class="js-input-from extra-controls__title" value="0" readonly)
                                span -
                                input(type="text" class="js-input-to extra-controls__title" value="0" readonly)
                    .form-elements__range-slider
                        div(class="range-slider")
                            input(type="text" class="js-range-slider" value="")

                .form-elements-item
                    form(action="")
                        +formElementsHeader('buttons')
                        .form-elements__buttons
                            +button('button', 'Click me')
                            +button('button button_disabled', 'Click me')
                            +button('rounded-button', 'Click me')
                            +button('rounded-button rounded-button_disabled', 'Click me')
                            +simpleButton('simple-button', 'Click me')
                            +simpleButton('simple-button simple-button_disabled', 'Click me')
                        .form-elements__btn
                            +longButton('long-button', 'Перейти к оплате', 'long-button__icon', 'arrow_forward')

                .form-elements-item
                    +formElementsHeader('pagination')
                    .form-elements__pagination
                        .pagination
                            +pagination('pagination__item pagination__item_active', '/mock-address', '1')
                            +pagination('pagination__item', '/mock-address', '2')
                            +pagination('pagination__item', '/mock-address', '3')
                            div(class="pagination__item") ...
                            +pagination('pagination__item', '/mock-address', '15')
                            button(class="pagination__next")
                            div(class="pagination__info") 1 – 12 из 100+ вариантов аренды

                .form-elements-item
                    .form-elements__dropdown
                        form(action="")
                            +formElementsHeader('dropdown')

                            .form-elements__input--dropdown
                                +dropdown('Сколько гостей')

                            div(class="dropdown__menu")
                                +dropdownControls('', 'Взрослые', '-', '0', '+')
                                +dropdownControls('', 'Дети', '-', '0', '+')
                                +dropdownControls('', 'Младенцы', '-', '0', '+')

                                div(class="dropdown__buttons" data-id="item-btn")
                                    button(class="clear-btn") Очистить
                                    button(class="apply-btn") Применить

                .form-elements-item
                    .form-elements__bullet
                        form(action="")
                            +formElementsHeader('bullet list')
                            ul(class="bullet")
                                +bulletList('Нельзя с питомцами')
                                +bulletList('Без вечеринок и мероприятий')
                                +bulletList('Время прибытия — после 13:00, а выезд до 12:00')

            .form-elements--bottom
                .form-elements-item
                    .form-elements__feedback
                        article(class="feedback")
                            div(class="feedback__wrapper")
                                div(class="feedback__avatar-wrapper")
                                    img(class="feedback__avatar" src="assets/images/avatar.jpg" alt="user avatar")
                                div(class="feedback__author-wrapper")
                                    div(class="feedback__author") Мурад Сарафанов
                                    div(class="feedback__date") 5 дней назад
                            div(class="feedback__wrapper")
                                div(class="feedback__like")
                                    div(class="like like_liked") 12
                                        i(class="like__icon like__icon_liked") favorite
                                div(class="feedback__text") Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.