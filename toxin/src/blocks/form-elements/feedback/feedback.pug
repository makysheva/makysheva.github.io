include ../like-btn/like-btn

mixin feedback(name, period, countLike, typeLike, comment)
    article(class="feedback")
        div(class="feedback__wrapper")
            div(class="feedback__avatar-wrapper")
                img(class="feedback__avatar" src="assets/images/avatar.jpg" alt="user avatar")
            div(class="feedback__author-wrapper")
                div(class="feedback__author") #{name}
                div(class="feedback__date") #{period}
        div(class="feedback__wrapper")
            div(class="feedback__like")
                +likeButton('12', 'favorite', 'like--active', 'like__icon--active')
            div(class="feedback__text") #{comment}

